[all:vars]
# SSH Configuration
ansible_ssh_private_key_file=~/.ssh/okd-cluster-key
ansible_ssh_common_args='-o StrictHostKeyChecking=no -o UserKnownHostsFile=/dev/null'

# Cluster Configuration
